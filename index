<body>
  <header>
    <h1>NamazTrack</h1>
    <p>Track your missed Namaz and Fasts</p>
  </header>
  <div class="container">
    <label for="dob">Date of Birth:</label>
    <input type="date" id="dob" required>

    <label for="gender">Gender:</label>
    <select id="gender" required>
      <option value="">Select</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>

    <label for="periodDays">Menstruation Days per Month (optional):</label>
    <input type="number" id="periodDays" placeholder="e.g., 5" min="0" max="10">

    <button onclick="calculate()">Calculate Missed Prayers & Fasts</button>

    <div class="result" id="output"></div>
  </div>

  <script>
    function calculate() {
      const dob = new Date(document.getElementById("dob").value);
      const gender = document.getElementById("gender").value;
      const periodDays = parseInt(document.getElementById("periodDays").value) || 0;

      if (!dob || !gender) {
        alert("Please enter all required fields.");
        return;
      }

      const today = new Date();
      const daysLived = Math.floor((today - dob) / (1000 * 60 * 60 * 24));
      const totalNamaz = daysLived * 5;
      const totalFasts = Math.floor(daysLived / 354) * 30; // Approximate years using Hijri

      let missedNamaz = totalNamaz;
      let missedFasts = totalFasts;

      if (gender === "female") {
        const approxMonths = Math.floor(daysLived / 30);
        const excludedDays = approxMonths * periodDays;
        missedNamaz -= excludedDays * 5;
        missedFasts -= Math.floor(excludedDays / 30);
      }

      document.getElementById("output").innerHTML = `
        Estimated Missed Namaz: ${missedNamaz.toLocaleString()}<br>
        Estimated Missed Fasts: ${missedFasts.toLocaleString()}
      `;
    }
  </script>
</body>
